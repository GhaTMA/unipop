{
  "class": "org.unipop.rest.RestSourceProvider",
  "baseUrl": "http://localhost:9200/",
  "addUrlTemplate": "/{{resource}}/{{type}}/{{id}}",
  "addTemplate": "{\n{{#prop}}\"{{key}}\":\"{{value}}\"{{^-last}}, {{/-last}}{{/prop}}\n}",
  "searchTemplate":"resources/search.mustache",
  "searchUrlTemplate": "{{resource}}/_search",
  "deleteUrlTemplate": "/{{_label}}/{{_id}}",
  "resultPath": "hits.hits",
  "opTranslator": {
    "eq": "term",
    "within": "terms"
  },
  "vertices": [
    {
      "resource": "vertex",
      "id": "@_source.id",
      "label": "@_source.type",
      "properties": {
        "name": "@_source.name",
        "age": "@_source.age",
        "lang": "@_source.lang"
      },
      "dynamicProperties": false
    }
  ],
  "edges": [
    {
      "resource": "edge",
      "id": "@_source.id",
      "label": "@_source.type",
      "properties": {
        "weight": "@_source.weight"
      },
      "dynamicProperties": false,
      "outVertex":{
        "ref": true,
        "id": "@_source.outid",
        "label": "@_source.outlabel"
      },
      "inVertex":{
        "ref": true,
        "id": "@_source.inid",
        "label": "@_source.inlabel"
      }
    }
  ]
}